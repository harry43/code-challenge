<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5 row">
      <%= render partial: 'company', collection: @companies %>
    </ul>
  <% end %>
</div>
